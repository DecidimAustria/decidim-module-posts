<div class="card__grid-metadata">
  <% if post.is_a?(Decidim::Posts::Post) && post.highlighted %>
    <div></div>
  <% else %>
    <%= cell "decidim/author", Decidim::UserPresenter.new(post.author), layout: :compact %>
  <% end %>
  <div class="feeds__feed_actions">
    <% if post.is_a?(Decidim::Posts::Post) && !post.highlighted %>
      <%= endorsement_buttons_cell(post) %>
      <%= cell "decidim/endorsers_list", post, layout: :full %>
    <% end %>
    <div class="feeds__feed_actions_submenu">
      <button type="button" aria-expanded="false" aria-controls="<%= dom_id(post) %>#feeds__feed_actions_submenu" id="<%= dom_id(post) %>#feeds__feed_actions_submenuButton" class="flex openButton">
        <span class="sr-only"><%= t('decidim.components.posts.actions.openMenu') %></span>
        <span aria-hidden="true">...</span>
      </button>
      <ul id="<%= dom_id(post) %>#feeds__feed_actions_submenu" role="menu" aria-orientation="vertical" aria-labelledby="<%= dom_id(post) %>#feeds__feed_actions_submenuButton" class="absolute right-0 mt-6 px-4 py-2 bg-white divide-y divide-dashed divide-gray-100 rounded-md shadow-feedMenu overflow-hidden hidden z-10">
        <% if post.author != current_user && post.class == Decidim::Posts::Post %>
        <li class="text-right py-2 text-feeds-sidebar">
          <%= cell("decidim/report_button", post, button_classes: "hover:text-black dropdown__item flex-row-reverse", modal_id: "flagModalPost#{post.id}") %>
        </li>
        <% end %>
        <% if false # disable for now %>
        <li class="text-right py-2 text-feeds-sidebar">
          <%= link_to '#', class:'hover:text-black dropdown__item' do %>
            <%= icon "translate" %>
            <span><%= t('decidim.components.posts.actions.translate') %></span>
          <% end %>
        </li>
        <% end %>
        <% if post_editable_by?(current_user) %>
          <li class="text-right py-2 text-feeds-sidebar">
            <%= link_to edit_post_path, class: "hover:text-black dropdown__item" do %>
              <%= icon "pencil-line" %>
              <span><%= t('decidim.components.posts.actions.edit') %></span>
            <% end %>
          </li>
        <% end %>
        <% if post_deleteable_by?(current_user) %>
          <li class="text-right py-2 text-feeds-sidebar">
            <%= button_to delete_post_path, method: delete_method, class: "hover:text-black dropdown__item", data: { confirm: t('decidim.components.posts.actions.deleteConfirmation') } do %>
              <%= icon "delete-bin-line" %>
              <span><%= t('decidim.components.posts.actions.delete') %></span>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

