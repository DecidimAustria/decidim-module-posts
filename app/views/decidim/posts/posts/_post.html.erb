<% if post.is_a?(Decidim::Posts::Post) %>
  <div id="feeds_post-<%= post.id %>" class="card__grid feeds__feed <%= 'hv-highlight' if post.highlighted %>" data-content="<%=post.category%>" <%= 'aria-live="polite"' if post.category == 'hv' %>>
    <% if post.category == 'hv' %>
      <%= cell("decidim/posts/post_hv", post) %>
    <% else %>
      <%= cell("decidim/posts/post", post) %>
    <% end %>
  </div>
<% elsif post.is_a?(Decidim::Meetings::Meeting) %>
  <%= cell("decidim/posts/meeting", post) %>
<% end %>
